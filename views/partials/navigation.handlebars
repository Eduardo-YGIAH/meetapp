<ul class="nav-slider-links user-logged-in">
    {{> nav_avatar}}
    <li class="nav-slider-link-item">
        <a class="nav-link" href="/meets">My <span class="brand">Meets</span></a>
    </li>
    <li class="nav-slider-link-item"><a class="nav-link" href="/bookings">My Bookings</a></li>
    <li class="nav-slider-link-item">
        <a class="nav-link" href="/create">Create a <span class="brand">Meet</span></a>
    </li>
</ul>
{{/if}}