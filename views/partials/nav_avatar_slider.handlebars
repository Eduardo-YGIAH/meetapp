{{#if image_url}}
<li class="nav-slider-link-item slider-avatar-li">
    <a class="nav-link" href="/profile">
        <img class="avatar" src={{ image_url }} />
    </a>
    <div class="user-details-container">
        <div class="user-name">
            <span>{{ first_name }}</span>
            <span> </span>
            <span>{{ last_name }}</span>
        </div>
        {{#if location}}
        <div class="user-location">{{ location }}</div>
        {{else}}
        <div class="user-location"><a class="nav-link" href="/profile">Save your prefered Location</a></div>
        {{/if}}
    </div>
</li>
{{else }}
<li class="nav-slider-link-item slider-avatar-li">
    <a class="nav-link" href="/profile">
        <div class="no-avatar">
            <p class="avatar-initials">EN</p>
        </div>
    </a>
    <div class="user-details-container">
        <div class="user-details-container">
            <div class="user-name">
                <span>{{ first_name }}</span>
                <span> </span>
                <span>{{ last_name }}</span>
            </div>
            {{#if location}}
            <div class="user-location">{{ location }} </div>
            {{else}}
            <div class="user-location"> <a class="nav-link" href="/profile">Save your prefered Location</a></div>
            {{/if}}
        </div>
</li>
{{/if }}